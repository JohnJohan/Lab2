// Context Class
public class GameCharacter {
    private RoleStrategy role;

    // Set the role dynamically
    public void setRole(RoleStrategy role) {
        this.role = role;
    }

    // Perform attack based on the current role
    public void performAttack() {
        if (role != null) {
            role.attack();
        } else {
            System.out.println("No role assigned!");
        }
    }

    // Perform defense based on the current role
    public void performDefense() {
        if (role != null) {
            role.defend();
        } else {
            System.out.println("No role assigned!");
        }
    }
}

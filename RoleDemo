// Main Class
public class GameDemo {
    public static void main(String[] args) {
        // Create a game character
        GameCharacter character = new GameCharacter();

        // Assign different roles and perform actions
        character.setRole(new WarriorRole());
        character.performAttack();  // Output: Warrior attacks with a sword!
        character.performDefense(); // Output: Warrior defends with a shield!

        character.setRole(new MageRole());
        character.performAttack();  // Output: Mage casts a fireball!
        character.performDefense(); // Output: Mage creates a magic barrier!

        character.setRole(new ArcherRole());
        character.performAttack();  // Output: Archer shoots an arrow!
        character.performDefense(); // Output: Archer dodges the attack!
    }
}

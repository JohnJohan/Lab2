public class GameDemo {
    public static void main(String[] args) {
        GameCharacter character = new GameCharacter();

        character.setRole(new KnightRole());
        character.performAttack();  // Output: Knight attacks with a sword!
        character.performDefense(); // Output: Using a shield to defend!

        character.setRole(new MageRole());
        character.performAttack();  // Output: Mage casts a spell!
        character.performDefense(); // Output: Creating a magic barrier for defense!

        character.setRole(new ArcherRole());
        character.performAttack();  // Output: Archer shoots an arrow!
        character.performDefense(); // Output: Dodgin to avoid attack!
    }
}
